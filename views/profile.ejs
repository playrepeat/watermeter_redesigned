<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>

<body>
    <header>
        <h1>Welcome, <%= user.firstName %>!</h1>
        <nav>
            <a href="/" class="nav-link">Home</a>
            <a href="/" class="nav-link">Logout</a>
        </nav>
    </header>

    <main class="profile-container">
        <!-- Account Details Section -->
        <section class="profile-section">
            <h2>Account Details</h2>
            <p><strong>Name:</strong>
                <%= user.firstName %>
                    <%= user.lastName %>
            </p>
            <p><strong>Email:</strong>
                <%= user.email %>
            </p>
            <p><strong>Apartment:</strong>
                <%= user.apartment %>
            </p>
        </section>

        <!-- Change Password Section -->
        <section class="profile-section">
            <h2>Change Password</h2>
            <form id="changePasswordForm">
                <label for="oldPassword">Old Password:</label>
                <input type="password" id="oldPassword" name="oldPassword" required>

                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" required>

                <button type="submit">Update Password</button>
            </form>
        </section>

        <!-- Record Water Meter Section -->
        <section class="profile-section">
            <h2>Record New Water Meter</h2>
            <form id="recordUsageForm">
                <label for="waterUsage">Water Usage (in cubic meters):</label>
                <input type="number" id="waterUsage" name="waterUsage" min="0.01" step="0.01" required>

                <label for="notes">Notes (Optional):</label>
                <textarea id="notes" name="notes" rows="4" placeholder="Add any additional details..."></textarea>

                <button type="submit">Submit</button>
            </form>
        </section>

        <!-- View Previous Recordings Section -->
        <section class="profile-section">
            <h2>Previous Water Meter Recordings</h2>
            <div id="recordsContainer">
                <!-- Records will be dynamically loaded here -->
            </div>
        </section>
    </main>


</body>